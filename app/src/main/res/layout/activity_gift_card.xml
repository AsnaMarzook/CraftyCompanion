<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faefeb"
    tools:context=".GiftCardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:id="@+id/firstCardView"
            android:layout_height="320dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/craftInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="242dp"
                    android:fontFamily="@font/aclonica"
                    android:text="Gift Card"
                    android:textColor="@color/brown"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/craftPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/craftInfo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="160dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="28dp"
                    android:text="Price: RS. 550"
                    android:textColor="@color/light_tea"
                    android:fontFamily="@font/aclonica"
                    android:textSize="20sp"

                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/light_bigsize"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="94dp"
                    android:layout_marginBottom="64dp"
                    app:srcCompat="@drawable/card_bigsize" />

            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/secondCardView"
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:layout_below="@+id/firstCardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/addquantity"
                    android:layout_width="44dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="130dp"
                    android:background="@drawable/iconminus" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/addquantity"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/subquantity"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/quantity"
                    android:background="@drawable/plusicon" />


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subquantity"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/coldRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Packed" />

                </RadioGroup>


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="136dp"
                    android:layout_marginBottom="160dp"
                    android:text="CRAFT DETAILS:"
                    android:textColor="@color/brown"
                    android:fontFamily="@font/aclonica"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/craft_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="50dp"

                    android:fontFamily="@font/akaya_telivigala"
                    android:text="SIZE: 25x16cm(M).
                                         SPECIFICATION: 100% Brand New and High Quality Handmade Cards.
Greeting cards to send to your loved ones.You can give this gift to anyone you like at any time."
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/drinkNameinInfo1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="9dp"
                    android:text="Customer Rate:"
                    android:textColor="@color/light_tea"
                    android:drawableRight="@android:drawable/star_on"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/rating_stars"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@android:drawable/star_on"
                    android:text=" / 2 Stars"
                    android:textColor="@color/light_tea"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <Button
                android:id="@+id/addtocart"
                android:layout_width="267dp"
                android:layout_height="59dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="300dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/main_button"
                android:fontFamily="@font/aclonica"
                android:text="Add to cart"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>